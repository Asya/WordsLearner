<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SwipeListView -->
    <style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@color/selected_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="ListImage">
        <item name="android:layout_width">@dimen/size_list_image</item>
        <item name="android:layout_height">@dimen/size_list_image</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="ListTitle">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListButtonAction">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MediumRedButton" parent="MediumText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/red_btn_state</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="PasscodeEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_passcode_state</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:maxLength">1</item>
    </style>

</resources>